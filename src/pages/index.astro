---
import Layout from '~/layouts/Layout.astro'
import Welcome from '~/components/Welcome.astro'
---

<script>
  import { useAPI } from '~/composables/api'

  let api = useAPI()
  let result = await api.foo.hello.query()
  let p = document?.getElementById('result') as HTMLElement
  p.innerHTML = `trpc says: ${result.message}`
</script>
<Layout>
  <Welcome />
  <div class='flex flex-col items-center justify-center mt-18'>
    <p id='result' class='text-4xl font-bold text-blue-800'></p>
  </div>
</Layout>
